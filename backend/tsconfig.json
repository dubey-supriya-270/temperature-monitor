{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "outDir": "./dist",  // This should match the directory you're trying to run from
      "rootDir": "./src",  // This should point to your TypeScript source files
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*.ts"],  // Include all TypeScript files in the src directory
    "exclude": ["node_modules"]
  }
  